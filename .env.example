# RTAI Trading System - Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Primary trading symbol
RTAI_SYMBOL=BTCUSDT

# Trading environment (development, staging, production)
RTAI_ENVIRONMENT=production

# Log level (DEBUG, INFO, WARNING, ERROR)
RTAI_LOG_LEVEL=INFO

# =============================================================================
# API CREDENTIALS - REPLACE WITH YOUR VALUES
# =============================================================================

# Binance API credentials (for live trading)
BINANCE_API_KEY=YOUR_BINANCE_API_KEY_HERE
BINANCE_SECRET_KEY=YOUR_BINANCE_SECRET_KEY_HERE

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN="7786821380:AAFO059nmvpUfdx5g4iNXAUJ5Au3gI2ViHA"
TELEGRAM_CHAT_ID="-4947146726"

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Health monitoring
RTAI_HEALTH_PORT=8080
RTAI_HEALTH_HOST=0.0.0.0

# Feed configuration
RTAI_FEED_TYPE=live  # live, replay, csv
RTAI_RECONNECT_DELAY=5.0
RTAI_MAX_RECONNECTS=10

# Performance tuning
RTAI_BATCH_SIZE=100
RTAI_PROCESSING_THREADS=2

# =============================================================================
# MONITORING & ALERTING
# =============================================================================

# Grafana admin password
GRAFANA_PASSWORD=admin123

# Alert thresholds
RTAI_CPU_ALERT_THRESHOLD=80
RTAI_MEMORY_ALERT_THRESHOLD=85
RTAI_ERROR_RATE_THRESHOLD=5.0

# =============================================================================
# DATA STORAGE
# =============================================================================

# Data directory paths
RTAI_DATA_DIR=/app/data
RTAI_LOG_DIR=/app/logs
RTAI_OUTPUT_DIR=/app/output

# QuestDB configuration
QUESTDB_PORT=9000
QUESTDB_HTTP_PORT=9009

# =============================================================================
# DEVELOPMENT OPTIONS
# =============================================================================

# Enable development features (set to false in production)
RTAI_DEBUG_MODE=false
RTAI_MOCK_TRADING=false
RTAI_ENABLE_PROFILING=false

# Chart generation
RTAI_CHART_WIDTH=1400
RTAI_CHART_HEIGHT=800
RTAI_OPEN_BROWSER=false

# =============================================================================
# SECURITY
# =============================================================================

# JWT secret for API authentication (generate with openssl rand -hex 32)
JWT_SECRET=YOUR_JWT_SECRET_HERE

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
